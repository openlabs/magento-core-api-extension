<?xml version="1.0" encoding="UTF-8"?>
<config>
	<tabs>
		<openerpconnector module="openerpconnector">
			<label>OpenERP Connector</label>
			<sort_order>000</sort_order>
		</openerpconnector>
	</tabs>
	<sections>
		<openerpconnector translate="label">
			<label>Opciones</label>
			<tab>openerpconnector</tab>
			<frontend_type>text</frontend_type>
			<sort_order>1000</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<stockmanual translate="label">
					<label>Productos de gestión Manual</label>
					<frontend_type>text</frontend_type>
					<sort_order>1</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>0</show_in_website>
					<show_in_store>0</show_in_store>
					<fields>
						<categories>
							<label>Categorías a ignorar:</label>
							<frontend_type>multiselect</frontend_type>
							<source_model>openerpconnector/adminhtml_source_categories</source_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<can_be_empty>1</can_be_empty>
							<comment>Selecciona las categorías a ignorar cuando se exporte el stock</comment>
						</categories>
					</fields>
				</stockmanual>
				<productexport translate="label">
					<label>Exportación de productos</label>
					<frontend_type>text</frontend_type>
					<sort_order>2</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>0</show_in_website>
					<show_in_store>0</show_in_store>
					<fields>
						<attributes>
							<label>Atributos a ignorar:</label>
							<frontend_type>multiselect</frontend_type>
							<source_model>openerpconnector/adminhtml_source_attribute</source_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<can_be_empty>1</can_be_empty>
							<comment>Selecciona los atributos a desincronizar con OpenERP</comment>
						</attributes>
					</fields>
				</productexport>				
			</groups>
		</openerpconnector>
	</sections>
</config>