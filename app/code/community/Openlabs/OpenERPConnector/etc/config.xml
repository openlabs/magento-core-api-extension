<?xml version="1.0"?>
<config>
    <modules>
        <Openlabs_OpenERPConnector>
            <version>0.0.1</version>
        </Openlabs_OpenERPConnector>
    </modules>
    <frontend>
        <routers>
            <openerpconnector>
                <use>standard</use>
                <args>
                    <module>Openlabs_OpenERPConnector</module>
                    <frontName>openerpconnector</frontName>
                </args>
            </openerpconnector>
        </routers>
    </frontend>
    <global>
        <models>
            <openerpconnector>
                <class>Openlabs_OpenERPConnector_Model</class>
            </openerpconnector>
            <sales>
                <rewrite>
                    <order_api>Openlabs_OpenERPConnector_Model_Sales_Order_Api</order_api>
                </rewrite>
            </sales>
            <catalog>
                <rewrite>
                    <product_api>Openlabs_OpenERPConnector_Model_Catalog_Product_Api</product_api>
                </rewrite>
            </catalog>
            <cataloginventory>
                <rewrite>
                    <stock_item_api>Openlabs_OpenERPConnector_Model_Oerpstock_Item_Api</stock_item_api>
                </rewrite>
            </cataloginventory>
        </models>
        <resources>
            <openerpconnector_setup>
                <setup>
                    <module>Openlabs_OpenERPConnector</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </openerpconnector_setup>
            <openerpconnector_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </openerpconnector_write>
            <openerpconnector_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </openerpconnector_read>
        </resources>
        <blocks>
            <openerpconnector>
                <class>Openlabs_OpenERPConnector_Block</class>
            </openerpconnector>
        </blocks>
        <helpers>
            <openerpconnector>
                <class>Openlabs_OpenERPConnector_Helper</class>
            </openerpconnector>
            <catalog>
                <rewrite>
                    <product>Openlabs_OpenERPConnector_Helper_Product</product>
                </rewrite>
            </catalog>
        </helpers>
        <events>
            <sales_order_place_after>
                <observers>
                    <init_imported_after_place_order>
                        <type>singleton</type>
                        <class>openerpconnector/observer</class>
                        <method>initImported</method>
                    </init_imported_after_place_order>
                    <add_cash_on_delivery_fee>
                        <type>singleton</type>
                        <class>openerpconnector/observer</class>
                        <method>addCashOnDelivery</method>
                    </add_cash_on_delivery_fee>
                </observers>
            </sales_order_place_after>
            <ol_openerp_catalog_product_info_type_bundle>
                <observers>
                    <ol_openerpconnect_addbundleinfo>
                        <type>singleton</type>
                        <class>openerpconnector/olcatalog_product_observer_bundle</class>
                        <method>addBundleInfo</method>
                    </ol_openerpconnect_addbundleinfo>
                </observers>
            </ol_openerp_catalog_product_info_type_bundle>
        </events>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <openerpconnector before="Mage_Adminhtml">Openlabs_OpenERPConnector_Adminhtml</openerpconnector>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <openerpconnector>
                                            <title>OpenErp Connector - All</title>
                                        </openerpconnector>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>
